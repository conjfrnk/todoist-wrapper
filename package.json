{
  "name": "todoist-wrapper",
  "version": "4.20260130023240",
  "description": "Electron Wrapper for Todoist",
  "main": "index.js",
  "type": "module",
  "bin": {
    "todoist-wrapper": "./bin/todoist-wrapper"
  },
  "scripts": {
    "start": "electron .",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=dist",
    "package-rpm": "npm run package-linux && ./scripts/build-rpm.sh",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "files": [
    "index.js",
    "config.cjs",
    "theme.js",
    "bin/",
    "assets/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conjfrnk/todoist-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/conjfrnk/todoist-wrapper/issues"
  },
  "homepage": "https://github.com/conjfrnk/todoist-wrapper#readme",
  "keywords": [
    "todoist",
    "electron",
    "wrapper",
    "linux",
    "wayland"
  ],
  "author": "Connor Frank",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "electron": "^37.0.0",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "jest": "^30.0.2",
    "prettier": "^3.0.0"
  }
}
